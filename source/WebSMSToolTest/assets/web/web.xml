<?xml version="1.0" encoding="UTF-8"?>
<webServerConfig>
    <!-- order of interceptors are important!!! 
      List of interceptors are executed prior to execution of any handler in this file.
    -->
  <requestInterceptors>
    <interceptor class="at.tugraz.ist.akm.test.webservice.handler.interceptor.MockAuthorizationInterceptor"/>
    <interceptor class="at.tugraz.ist.akm.webservice.handler.interceptor.SessionCookieInterceptor"/>
  </requestInterceptors>
  <requestHandler  class="at.tugraz.ist.akm.webservice.handler.FileRequestHandler">
    <request uriPattern="/" dataFile="web/index.html" contentType="text/html"/>
    <request uriPattern="/js/jquery.js" dataFile="web/js/jquery.js" contentType="text/javascript"/>
    <request uriPattern="/js/client.js" dataFile="web/js/client.js" contentType="text/javascript"/> 
  </requestHandler>
  <requestHandler class="at.tugraz.ist.akm.test.webservice.handler.EchoJsonRequestHandler">
      <request uriPattern="/api.html" contentType="text/html" dataFile="web/echo.html"/>
  </requestHandler>
</webServerConfig>