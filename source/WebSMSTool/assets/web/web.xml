        <request
            contentType="text/javascript"
            dataFile="web/js/loader.js"
            uriPattern="/js/loader.js" />

        <request
            contentType="text/javascript"
            dataFile="web/js/wst/wstLog.js"
            uriPattern="/js/wst/wstLog.js" />

        <request
            contentType="text/javascript"
            dataFile="web/js/wst/wstAPI.js"
