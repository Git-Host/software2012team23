            contentType="text/javascript"
            dataFile="web/js/wst/wstTab.js"
            uriPattern="/js/wst/wstTab.js" />

        <request
            contentType="text/css"
            dataFile="web/css/wstTab.css"
            uriPattern="/css/wstTab.css" />

