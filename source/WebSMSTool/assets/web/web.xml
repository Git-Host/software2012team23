<webServerConfig>

    <requestInterceptors>

        <interceptor class="at.tugraz.ist.akm.webservice.requestprocessor.interceptor.AuthorizationInterceptor" />
    </requestInterceptors>

    <requestHandler class="at.tugraz.ist.akm.webservice.requestprocessor.TestfileRequestProcessor" >

        <request
            contentType="text/javascript"
            dataFile="web/js/qunit/clientTest.js"
            uriPattern="/js/qunit/clientTest.js" />

        <request
            contentType="text/html"
            dataFile="web/js/wst/templates/test.html"
            uriPattern="/js/wst/templates/test.html" />

        <request
            contentType="text/html"
            dataFile="web/clientTest.html"
            uriPattern="/clientTest.html" />
    </requestHandler>

    <requestHandler class="at.tugraz.ist.akm.webservice.requestprocessor.FileRequestProcessor" >

        <request
            contentType="text/html"
            dataFile="web/index.html"
            uriPattern="/" />

        <request
            contentType="text/html"
            dataFile="web/index.html"
            uriPattern="/index.html" />

        <request
            contentType="text/javascript"
            dataFile="web/js/jquery.js"
            uriPattern="/js/jquery.js" />

        <request
            contentType="text/javascript"
            dataFile="web/js/client.js"
            uriPattern="/js/client.js" />

        <request
            contentType="text/javascript"
            dataFile="web/js/qunit/qunit.js"
            uriPattern="/js/qunit/qunit.js" />

        <request
            contentType="text/javascript"
            dataFile="web/js/notifier.js"
            uriPattern="/js/notifier.js" />

        <request
            contentType="text/css"
            dataFile="web/js/qunit/qunit.css"
            uriPattern="/js/qunit/qunit.css" />

        <request
            contentType="text/css"
            dataFile="web/css/css.css"
            uriPattern="/css/css.css" />

        <request
            contentType="text/javascript"
            dataFile="web/js/jquery.blockUI.js"
