        <request
            contentType="text/html"
            dataFile="web/js/wst/templates/contact_tab.html"
            uriPattern="/js/wst/templates/contact_tab.html" />
    </requestHandler>

    <requestHandler class="at.tugraz.ist.akm.webservice.requestprocessor.JsonAPIRequestProcessor" >

        <request
            contentType="text/html"
            dataFile="web/api.html"
            uriPattern="/api.html" />
    </requestHandler>

    <requestHandler class="at.tugraz.ist.akm.webservice.requestprocessor.EchoJsonRequestProcessor" >

        <request
            contentType="text/html"
            dataFile="web/echo.html"
            uriPattern="/echo.html" />
    </requestHandler>

